<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL ?>
<?import javafx.geometry.Insets ?>
<?import javafx.scene.control.Button ?>
<?import javafx.scene.image.ImageView ?>
<?import javafx.scene.layout.HBox ?>
<?import javafx.scene.layout.VBox ?>

<VBox fx:id="end_screen" alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ImageView fx:id="end_screen_text" fitWidth="400.0" preserveRatio="true" styleClass="text-image">
            <VBox.margin>
                <Insets bottom="15.0" />
            </VBox.margin>
        </ImageView>
        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button fx:id="quit_button" mnemonicParsing="false" onAction="#handleQuit" prefWidth="80.0" text="Quit" textFill="#ee0606" />
                <Button fx:id="replay_button" mnemonicParsing="false" onAction="#handleReplay" prefWidth="80.0" text="Replay" textFill="#3807f7" />
            </children>
            <padding>
                <Insets top="20.0" />
            </padding>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" />
    </children>
    <stylesheets>
        <URL value="@../css/DungeonStyle.css" />
        <URL value="@../css/EndScreen.css" />
    </stylesheets>
</VBox>
